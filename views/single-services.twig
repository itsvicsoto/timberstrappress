{% extends "page-services.twig" %}

{% block services_content %}


	<div class="p-services__single-back">
		<div class="container">
			<a href="/services">
					<img class="p-services__single-back-icon" src="{{ site.theme.link }}/img/raw/back_icn.svg" alt="" /> Back to Services
			</a>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<img src="{{ Image(post.service_image_banner).src }}" class="p-services__single-main-images img-responsive" alt="" />
				<div class="p-services-single-content">
					<div class="p-services-single-content__header">
						<h1>{{post.title}}</h1>
					</div>
					<div class="p-services-single-content__text">
						{{post.content}}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
